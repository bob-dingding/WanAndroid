/* pages/message/index.wxss */

.mpTabbar{
  /* tabbar背景颜色 */
  /* background-color:white; */
  position:fixed;
  width: 100%;
  top:0;
  left:0;
  right:0;
}
.messagelist{
  position: fixed;
  top: 120rpx;
  left:0;
  right:0;
  /*固定高度,以iphone6为例，（1334-64-120）/2*/
  height: 1150rpx;
}
.rootview{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
   align-items: center;
}
.tipsview{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* 往上移半个tipsview高度（200+24）/2 */
  margin-top: -112rpx;
}
.tipsview_image{
   width: 200rpx;
   height: 200rpx;
}

.tipsview_text{
  color: red;
  font-size: 30rpx;
}

.historyitem{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 25rpx 35rpx;
}
.historyitem_top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.historyitem_top_left{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.historyitem_top_left .btn{
  display: inline-block;
 margin-right: 10rpx;
  padding: 0 0;
  width: 150rpx;
  color: #07C160;
  font-size: 30rpx;
  align-items: center;
  border: 1px solid #07C160;

}
.txt{
  color: gray;
}
.historyitem_title{
  margin-top: 15rpx;
overflow: hidden;    
text-overflow:ellipsis;    
white-space: nowrap;
}